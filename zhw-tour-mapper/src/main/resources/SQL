CREATE TABLE IF NOT EXISTS `zhw_tour`.`ZHW_MEM` (
  `FW_CENTER` VARCHAR(16) NULL COMMENT '所属服务中心',
  `PK_ID` INT UNSIGNED NOT NULL AUTO_INCREMENT COMMENT '会员表主键',
  `TJ_MAN` VARCHAR(32) NULL COMMENT '推荐人',
  `JD_MAN` VARCHAR(32) NULL COMMENT '接点人',
  `HY_CODE` VARCHAR(32) NULL COMMENT '会员编号',
  `ZY_AREA` INT NULL COMMENT '所属区域，左区或者右区，0为左区，1为右区',
  `YJ_PWD` VARCHAR(16) NOT NULL COMMENT '一级密码',
  `EJ_PWD` VARCHAR(16) NOT NULL COMMENT '二级密码，积分操作时需要二给密码',
  `SFZ_CARD_CODE` VARCHAR(32) NULL COMMENT '身份证号码',
  `YX_EMAIL` VARCHAR(16) NULL COMMENT '邮箱',
  `SJ_MOBILE` VARCHAR(16) NULL COMMENT '手机号',
  `JB_LEVEL` INT NULL COMMENT '申请级别，1为普通会员，2为金卡代理，3为钻石代理',
  `ZC_TIME` VARCHAR(32) NULL COMMENT '注册时间',
  `JH_STATUS` INT NULL COMMENT '激活状态，0为已激活，1为未激活',
  `KT_TIME` VARCHAR(32) NULL COMMENT '开通时间，审批时间',
  `XG_TIME` VARCHAR(32) NULL COMMENT '修改时间',
  `IF_ADMIN` INT NULL COMMENT '是否报单中心，是的都为管理员，0为是，1 为否',
  PRIMARY KEY (`PK_ID`),
  UNIQUE INDEX `PK_ID_UNIQUE` (`PK_ID` ASC),
  UNIQUE INDEX `HY_CODE_UNIQUE` (`HY_CODE` ASC))
ENGINE = InnoDB
COMMENT = '会员信息表，存储会员信息'


CREATE TABLE IF NOT EXISTS `zhw_tour`.`ZHW_MEM_BANK` (
  `PK_ID` INT UNSIGNED NOT NULL AUTO_INCREMENT,
  `HY_CODE` VARCHAR(32) NULL COMMENT '会员编号',
  `KH_BANK_NAME` VARCHAR(300) NULL COMMENT '开户银行名称',
  `KH_CARD_CODE` VARCHAR(32) NULL COMMENT '银行卡号',
  `KH_NAME` VARCHAR(45) NULL COMMENT '开户人姓名',
  `KH_PROVINCE` VARCHAR(45) NULL COMMENT '开户省份',
  `KH_CITY` VARCHAR(45) NULL COMMENT '开户城市',
  `KH_SF_CARD_CODE` VARCHAR(32) NULL COMMENT '开户身份证号码',
  `CJ_TIME` VARCHAR(32) NULL COMMENT '创建时间',
  `XG_TIME` VARCHAR(32) NULL COMMENT '修改时间',
  `IF_DISABLED` INT(2) NULL COMMENT '是否作废，1为是，0为否',
  PRIMARY KEY (`PK_ID`),
  UNIQUE INDEX `PK_ID_UNIQUE` (`PK_ID` ASC))
ENGINE = InnoDB
COMMENT = '会员银行卡信息表，存储会员银行卡信息信息'



CREATE TABLE IF NOT EXISTS `zhw_tour`.`ZHW_MEM_SCORE` (
  `HY_CODE` VARCHAR(32) NOT NULL,
  `TJ_COUNT` INT NULL COMMENT '推荐人数',
  `HY_LEVEL` INT NULL COMMENT '会员级别，1表示普通会员，2金卡代理，3钻石代理',
  `IF_ADMIN` INT NULL COMMENT '是否报单中心，0表示是，1表示否',
  `LJ_TOTAL_SCORE` DECIMAL(20,2) NULL COMMENT '累计总积分',
  `JJ_SCORE` DECIMAL(20,2) NULL COMMENT '奖金积分',
  `XJ_SCORE` DECIMAL(20,2) NULL COMMENT '现金积分',
  `LY_SCORE` DECIMAL(20,2) NULL COMMENT '旅游积分',
  `GW_SCORE` DECIMAL(20,2) NULL COMMENT '购物积分',
  `BD_SCORE` DECIMAL(20,2) NULL COMMENT '报单积分',
  `PD_BALANCE` DECIMAL(20,2) NULL COMMENT '碰对后剩余积分',
  `PD_OVER_AREA` INT NULL COMMENT '碰对后剩余区域，0为左区，1为右区',
  `GX_TIME` VARCHAR(32) NULL COMMENT '更新时间',
  PRIMARY KEY (`HY_CODE`),
  UNIQUE INDEX `HY_CODE_UNIQUE` (`HY_CODE` ASC))
ENGINE = InnoDB
COMMENT = '会员积分记录表'



CREATE TABLE IF NOT EXISTS `zhw_tour`.`ZHW_TOUR_REG` (
  `PK_ID` INT UNSIGNED NOT NULL AUTO_INCREMENT,
  `BM_NAME` VARCHAR(45) NULL COMMENT '姓名',
  `BM_CARD_CODE` VARCHAR(45) NULL COMMENT '身份证号码',
  `BM_SEX` INT NULL COMMENT '性别，0表示男，1表示女',
  `BM_HJ_ADDRESS` VARCHAR(200) NULL COMMENT '户藉',
  `BM_CAR_CODE` VARCHAR(60) NULL COMMENT '航班号/列车号',
  `BM_PHONE` VARCHAR(32) NULL COMMENT '电话',
  `BM_PRICE` DECIMAL(10,2) NULL COMMENT '收费',
  `BM_COMMENT` VARCHAR(500) NULL COMMENT '备注',
  PRIMARY KEY (`PK_ID`),
  UNIQUE INDEX `PK_ID_UNIQUE` (`PK_ID` ASC))
ENGINE = InnoDB
COMMENT = '旅游报名表'

